<div class="home-pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
<h1 class="display-4">Events</h1>
<p class="lead">Sponsored Events.</p>
</div>

<div class="container center">
<div class="row justify-content-center">

<% @events.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |event| %>
      <div class="col-md-4">
      <%= image_tag event.picture_url, :class => "event_poster" if event.picture.present? %> 
        <h4><%= link_to event.name, event %></h4>
        <%= event.description %>
      </div>
    <% end %>
  </div>
<% end %>

</div>
</div>